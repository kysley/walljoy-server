{
  "compilerOptions": {
    "baseUrl": "./",
    "noEmit": true,
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "exclude": ["scripts", "node_modules"],
  "include": ["src","types/*"]
}
